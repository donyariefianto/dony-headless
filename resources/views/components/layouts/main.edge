<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      {{ pageTitle || 'Dynamic CMS' }}
    </title>
    {{-- Tailwind CSS CDN (untuk pengembangan cepat, gunakan PostCSS untuk production) --}}
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    {{-- Font Awesome CDN untuk icon --}}
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    {{-- Quill.js CSS (hanya jika menggunakan WYSIWYG) --}}
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet" />
    <style>
      /* Styling khusus untuk Quill.js atau komponen lain */
      
      .ql-editor {
        min-height: 150px;
      }
      
      .ql-container {
        border: 1px solid #d1d5db;
        /* border-gray-300 */
        border-top: none;
        border-radius: 0 0 0.375rem 0.375rem;
        /* rounded-md-b */
      }
      
      .ql-toolbar.ql-snow {
        border: 1px solid #d1d5db;
        /* border-gray-300 */
        border-bottom: none;
        border-radius: 0.375rem 0.375rem 0 0;
        /* rounded-md-t */
        background-color: #f9fafb;
        /* bg-gray-50 */
      }
    </style>
  </head>
  <body class="bg-gray-100 font-sans leading-normal tracking-normal">

    <div class="flex h-screen bg-gray-200">
      {{-- Sidebar --}}
      <div class="flex-none w-64 bg-gray-800 text-white p-4">
        <h2 class="text-2xl font-semibold mb-6">
          Dynamic CMS
        </h2>
        <nav>
          <ul>
            <li class="mb-2">
              <a href="{{ route('dashboard') }}" class="block hover:bg-gray-700 px-3 py-2 rounded">
                <i class="fas fa-home mr-2"></i>Dashboard
            </a>
            </li>
            <li class="mb-2">
              <h3 class="text-lg font-semibold mb-2 mt-4">
                Modul
              </h3>
              <ul>

                {{-- allModules dikirim dari setiap controller method melalui view.share() --}}
                @each(mod in allModules)
                  <li class="mb-1">
                    <a
                      href="{{ route('modules.index', { slug: mod.slug }) }}"
                      class="block hover:bg-gray-700 px-3 py-1 rounded"
                    >
                      <i class="fas fa-cubes mr-2"></i>{{ mod.name }}
                  </a>
                  </li>
                @endeach
              </ul>
            </li>
          </ul>
        </nav>
      </div>

      {{-- Main Content Area --}}
      <div class="flex-grow flex flex-col">
        {{-- Header --}}
        <header class="bg-white shadow p-4 flex justify-between items-center">
          <h1 class="text-2xl font-bold text-gray-800">
            {{ pageTitle || 'Welcome' }}
          </h1>
          <div>
            {{-- Anda bisa menambahkan user info atau logout di sini --}}
            <a href="#" class="text-gray-600 hover:text-gray-800">Logout</a>
          </div>
        </header>

        {{-- Notification Area (Flash Messages) --}}
        @if(flashMessages.has('notification'))
          <div
            class="p-4 mx-6 mt-4 rounded-md {{ flashMessages.get('notification').type === 'success' ? 'bg-green-100 border-green-500 text-green-700' : 'bg-red-100 border-red-500 text-red-700' }} border-l-4"
            role="alert"
          >
            <p class="font-bold">
              {{ flashMessages.get('notification').type === 'success' ? 'Berhasil!' : 'Error!' }}
            </p>
            <p>
              {{ flashMessages.get('notification').message }}
            </p>
          </div>
        @endif
        
        {{-- Content Section --}}
        <main class="flex-grow p-6 overflow-y-auto">
          {{--  @!section('content')  --}}
        </main>
      </div>
    </div>

    {{-- Global JavaScript (jika ada) --}}
    <script>
      // Contoh JavaScript untuk interaktivitas umum
      // Misalnya, untuk menyembunyikan flash message setelah beberapa detik
      document.addEventListener("DOMContentLoaded", () => {
        const flashMessage = document.querySelector('[role="alert"]');
        if (flashMessage) {
          setTimeout(() => {
            flashMessage.remove();
          }, 5e3); // Sembunyikan setelah 5 detik
        }
      });
    </script>
  </body>
</html>
