<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
      Sidebar with Submenus & Content
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <style>
      body {
        font-size: .875rem;
      }
      
      .sidebar {
        display: flex;
        flex-direction: row;
        flex-shrink: 0;
        width: 280px;
        height: 100vh;
        background-color: #212529;
      }
      
      .sidebar .nav {
        flex-direction: column;
      }
      
      .sidebar .nav-link {
        color: #adb5bd;
        cursor: pointer;
      }
      
      .sidebar .nav-link.active {
        color: white;
        background-color: #343a40;
      }
      
      .sidebar-icon {
        width: 60px;
        background-color: #111;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 1rem;
      }
      
      .sidebar-submenu {
        flex-grow: 1;
        background-color: #1f1f1f;
        padding: 1rem;
        color: #fff;
      }
      
      .main-content {
        flex-grow: 1;
        background-color: #f8f9fa;
        padding: 2rem;
      }
      
      .tab-pane .nav-link {
        color: #fff;
        padding-left: 0;
      }
      
      .nav-link:hover {
        color: #fff;
        text-decoration: underline;
      }
      
      .menu-header,
      .submenu-header {
        font-weight: bold;
        font-size: 0.9rem;
        color: #adb5bd;
        text-align: center;
        margin-bottom: 1rem;
        text-transform: uppercase;
      }
    </style>
  </head>
  <body>
    <div class="d-flex">
      <!-- Sidebar -->
      <div class="sidebar">
        <!-- Icons Menu -->
        <div
          class="sidebar-icon nav flex-column nav-pills"
          id="menu-tabs"
          role="tablist"
          aria-orientation="vertical"
        >
          <div class="menu-header">
            Menu
          </div>
          <button
            class="nav-link active"
            id="users-tab"
            data-bs-toggle="pill"
            data-bs-target="#submenu-users"
            type="button"
            role="tab"
            aria-controls="submenu-users"
            aria-selected="true"
            title="Users"
          >
            <i class="bi bi-person fs-4"></i>
          </button>
          <button
            class="nav-link"
            id="settings-tab"
            data-bs-toggle="pill"
            data-bs-target="#submenu-settings"
            type="button"
            role="tab"
            aria-controls="submenu-settings"
            aria-selected="false"
            title="Settings"
          >
            <i class="bi bi-gear fs-4"></i>
          </button>
          <button
            class="nav-link"
            id="analytics-tab"
            data-bs-toggle="pill"
            data-bs-target="#submenu-analytics"
            type="button"
            role="tab"
            aria-controls="submenu-analytics"
            aria-selected="false"
            title="Analytics"
          >
            <i class="bi bi-bar-chart fs-4"></i>
          </button>
        </div>

        <!-- Submenus -->
        <div class="tab-content sidebar-submenu" id="submenu-tabContent">
          <div class="submenu-header">
            Submenu
          </div>
          <div class="tab-pane fade show active" id="submenu-users" role="tabpanel" aria-labelledby="users-tab">
            <h6>
              <i class="bi bi-person me-2"></i>Users
            </h6>
            <ul class="nav flex-column small" id="users-sub">
              <li class="nav-item">
                <a class="nav-link" data-bs-toggle="pill" data-bs-target="#content-all-users" role="tab">All Users</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" data-bs-toggle="pill" data-bs-target="#content-admins" role="tab">Admins</a>
              </li>
            </ul>
          </div>
          <div class="tab-pane fade" id="submenu-settings" role="tabpanel" aria-labelledby="settings-tab">
            <h6>
              <i class="bi bi-gear me-2"></i>Settings
            </h6>
            <ul class="nav flex-column small">
              <li class="nav-item">
                <a class="nav-link" data-bs-toggle="pill" data-bs-target="#content-general" role="tab">General</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" data-bs-toggle="pill" data-bs-target="#content-security" role="tab">Security</a>
              </li>
            </ul>
          </div>
          <div class="tab-pane fade" id="submenu-analytics" role="tabpanel" aria-labelledby="analytics-tab">
            <h6>
              <i class="bi bi-bar-chart me-2"></i>Analytics
            </h6>
            <ul class="nav flex-column small">
              <li class="nav-item">
                <a class="nav-link" data-bs-toggle="pill" data-bs-target="#content-reports" role="tab">Reports</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" data-bs-toggle="pill" data-bs-target="#content-traffic" role="tab">Traffic</a>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Main Content Area -->
      <div class="main-content tab-content" id="mainContent">
        <div class="tab-pane fade show active" id="content-all-users" role="tabpanel">
          <h1>
            All Users
          </h1>
          <p>
            List and manage all users here.
          </p>
        </div>
        <div class="tab-pane fade" id="content-admins" role="tabpanel">
          <h1>
            Admins
          </h1>
          <p>
            Manage administrator accounts.
          </p>
        </div>
        <div class="tab-pane fade" id="content-general" role="tabpanel">
          <h1>
            General Settings
          </h1>
          <p>
            Modify global configurations.
          </p>
        </div>
        <div class="tab-pane fade" id="content-security" role="tabpanel">
          <h1>
            Security
          </h1>
          <p>
            Update password and access control settings.
          </p>
        </div>
        <div class="tab-pane fade" id="content-reports" role="tabpanel">
          <h1>
            Reports
          </h1>
          <p>
            View analytics and generated reports.
          </p>
        </div>
        <div class="tab-pane fade" id="content-traffic" role="tabpanel">
          <h1>
            Traffic
          </h1>
          <p>
            Track web traffic and user behavior.
          </p>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js">
      
    </script>
  </body>
</html>
